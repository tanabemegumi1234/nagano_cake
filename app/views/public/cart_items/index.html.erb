<h1>ショッピングカート</h1>
 
<table>
<tr>
<th>商品名</th>
<th>単価（税込）</th>
<th>数量</th>
<th>小計</th>
</tr>
<%= link_to "カートを空にする", destroy_all_path, method: :delete, "data-confirm" => "本当に空にしますか？" %><br>
<% @cart_items.each do |cart_item| %>
<tr>
<td><%= cart_item.item.name %></td>
<td><%= cart_item.item.with_tax_price %>円</td>
<td>
  <%= form_with model:cart_item, url:cart_item_path(cart_item.id) , local:true do |f| %>
  <%= f.select :amount, *[1..10] %>
  <%= f.submit "変更" , class: "btn btn-success" %>
  <% end %>
 </td>
 <td><%= link_to "削除", destroy_path(cart_item.id) ,  method: :delete , "data-confirm" => "商品を削除しますか？" , class: "btn btn-danger"%></td>
<td><%= cart_item.subtotal%>円</td>
<% @total += cart_item.subtotal %>
</tr>
<% end %>
</table>
<%= link_to "買い物を続ける" , root_path , class: "btn btn-primary" %>
<td>合計金額</td>
<td>¥<%= @total %></td>
<%= link_to "情報入力に進む" , new_order_path , class: "btn btn-success" %>