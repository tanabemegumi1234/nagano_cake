<div class="container">
<h2>注文履歴画面</h2>
<table class="table table-bordered">
<tr>
<th>注文日</th>
<th>配送先</th>
<th>注文商品</th>
<th>支払金額</th>
<th>注文詳細</th>
</tr>

<% @order.each do |order| %>
<tr>
<td><%= order.created_at.strftime('%Y/%m/%d') %></td>
<td>〒<%=order.shipping_postal_code%><%=order.shipping_address%></td>

 <% order.order_details.each do |order_detail| %>
<td> <%= order_detail.item.name %></td>
　<% end %>
　<td><%=order.total_billing_amount %>円</td>
　<td><%= link_to'表示する',order_path(order.id), class:"btn btn-primary" %></td>
</tr>
<% end %>

</table>
</div>