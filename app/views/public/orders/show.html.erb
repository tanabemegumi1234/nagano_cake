<div class="container">
<h2>注文詳細ページ</h2>
<div class="row">
<div class="col-xs-8">
<table class="table table-bordered">
  <p>注文情報</p>
<tr>
<th>注文日</th>
<td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
</tr>
<tr>
<th>配送先</th>
<td><%= @order.shipping_postal_code %><%= @order.shipping_address %><%= @order.shipping_name %></td>
</tr>
<tr>
<th>支払方法</th>
<td><%= @order.payment_method_i18n %></td>
</tr>
</table>
</div>

<div class="col-xs-4">
<table class="table table-bordered">
<p>請求情報</p>
<tr>
<th>商品合計</th>
<td><%=@total %>円</td>
</tr>
<tr>
<th>配送料</th>
<td>800円</td>
</tr>
<tr>
<th>ご請求金額</th>
<td><%= @total +=800 %>円</td>
</tr>
</table>
</div>
</div>
<div class="row">
  <div class="col-xs-2">
<table class="table table-bordered">
<p>注文内容</p>
<tr>
<th>商品</th>
<th>単価（税込）</th>
<th>個数</th>
<th>小計</th>
</tr>
<tr>
<% @order_detail.each do |order_detail| %>
  <tr>
  <td><%=order_detail.item.name %></td>
  <td><%=order_detail.purchase_price %></td>
  <td><%=order_detail.amount %></td>
  <td><%=order_detail.purchase_price*order_detail.amount %></td>
  </tr>
  <% @total += order_detail.purchase_price*order_detail.amount %>
<% end %>
</tr>
</table>
</div>
</div>
</div>