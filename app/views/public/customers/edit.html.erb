<div class="container mt-5">
  <div class="row">
    <div class="col-md-2"></div>  
      <div class="col-md-8">
        <h1>顧客の登録情報編集画面</h1>
        <div class="table-responsive">
        <table class="table table-bordered">
        <%= form_with model: @customer,url: customers_information_path do |f| %>
        <tr>
         <th class="table-secondary w-25">氏名</th> 
           <td><%= f.text_field :last_name %><%= f.text_field :first_name %></td>
        </tr>
        <tr>
         <th class="table-secondary w-25">フリガナ</th> 
           <td><%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %></td>
        </tr>
        <tr>
         <th class="table-secondary w-25">郵便番号</th> 
           <td><%= f.text_field :postal_code %></td>
        </tr>
        <tr>
         <th class="table-secondary w-25">住所</th> 
           <td><%= f.text_field :address %></td>
        </tr>
        <tr>
         <th class="table-secondary w-25">電話番号</th> 
           <td><%= f.text_field :telephone_number %></td>
        </tr>
        <tr>
         <th class="table-secondary w-25">メールアドレス</th> 
           <td><%= f.text_field :email %></td>
        </tr>
        </table>
       </div>
       </div>
  </div>
</div>
 <%= f.submit '編集内容を保存' %>
  <%= link_to '退会', customers_quit_path, class: "btn btn-success mb-4" %>
<% end %>