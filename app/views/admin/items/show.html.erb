<div class="container">
<h1>商品詳細</h1>
 <div class="table-responsive">
  <div style="padding-left:20%;">
  <%= image_tag @item.get_item_image(100,100) %>
  </div>
  <table>
<tr>
  <th>商品名</th>
  <td><%= @item.name %></td>
</tr>
<tr>
  <th>商品説明</th>
  <td><%= @item.introduction %></td>
</tr>
<tr>
  <th>税込価格 </th>
  <th>(税抜価格)</th>
  <td><%= (@item.price* 1.1).floor %>円(<%= @item.price %>円)</td>
</tr>
</table>
<%= link_to '編集する', edit_admin_item_path,class:"btn btn-success" %>
</div>
</div>