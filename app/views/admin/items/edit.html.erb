<div class="container">
<h1>編集画面</h1>
<table>
<tr>
  <%= form_with model: @item,url: admin_item_path(@item.id), method: :patch do |f| %>
  <%= f.file_field :image, accept: "image/*" %>
</tr>  
<tr>
  <th>商品名</th>
  <td><%= f.text_field :name %></td>
</tr>
<tr>
  <th>商品説明</th>
  <td><%= f.text_field :introduction %></td>
</tr>
<tr>
  <th>税抜価格</th>
  <td> <%= f.text_field :price %>円</td>
</tr>
 <tr> 
  <td><%= f.submit '変更を保存',class:"btn btn-success" %></td>
 </tr> 
<% end %>
<table>
</div>