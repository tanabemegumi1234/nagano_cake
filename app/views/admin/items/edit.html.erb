<h1>編集画面</h1>

<%= form_with model: @item,url: admin_item_path(@item.id), method: :patch do |f| %>
   <%= f.file_field :image, accept: "image/*" %>
  <h4>商品名</h4>
  <%= f.text_field :name %>
  <h4>商品説明</h4>
 <%= f.text_field :introduction %>
 <h4>税抜価格</h4>
 <%= f.text_field :price %>円
  
  <%= f.submit '変更を保存' %>
  
<% end %>